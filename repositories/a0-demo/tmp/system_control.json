{
  "security": {
    "active_profile": "open"
  },
  "security_profiles": {
    "open": {
      "features": {}
    },
    "restricted": {
      "features": {
        "godmode": {
          "enabled": false
        },
        "omni": {
          "enabled": false
        }
      }
    },
    "lockdown": {
      "features": {
        "godmode": {
          "enabled": false
        },
        "omni": {
          "enabled": false
        },
        "security_control": {
          "enabled": false
        },
        "feature_control": {
          "enabled": false
        }
      }
    }
  },
  "workflow": {
    "active_profile": "guided"
  },
  "workflow_profiles": {
    "default": {
      "features": {}
    },
    "verbose": {
      "features": {
        "verbose_reasoning": {
          "enabled": true,
          "reference": "verbose_reasoning.md"
        }
      }
    },
    "guided": {
      "features": {
        "auto_confirmation": {
          "enabled": true,
          "reference": "auto_confirmation.md"
        },
        "verbose_reasoning": {
          "enabled": true,
          "reference": "verbose_reasoning.md"
        }
      }
    }
  },
  "feature_options": {
    "godmode": {
      "enabled": false
    },
    "omni": {
      "enabled": false
    },
    "security_control": {
      "enabled": true
    },
    "feature_control": {
      "enabled": true
    },
    "workflow_control": {
      "enabled": true
    }
  }
}
